@{
	ViewData["Title"] = "Đặt Bàn";
}

<div class="container-fluid">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h2>Danh Sách Đặt Bàn</h2>
	</div>

	<div class="card shadow">
		<div class="card-body">
			<div class="table-responsive">
				<table id="reservationsTable" class="table table-striped table-bordered">
					<thead class="thead-dark">
						<tr>
							<th>Mã</th>
							<th>Thời gian</th>
							<th>Khách hàng</th>
							<th>SĐT</th>
							<th>Email</th>
							<th>Số người</th>
							<th>Bàn</th>
							<th>Trạng thái</th>
							<th>Thao tác</th>
						</tr>
					</thead>
					<tbody>
						<!-- Dữ liệu sẽ được thêm bằng JavaScript -->
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="reservationDetailModal" tabindex="-1">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Chi tiết đặt bàn</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				<p><strong>ID:</strong> <span id="res-id"></span></p>
				<p><strong>Ngày giờ:</strong> <span id="res-datetime"></span></p>
				<p><strong>Số người:</strong> <span id="res-party"></span></p>
				<p><strong>Bàn:</strong> <span id="res-table"></span></p>
				<p><strong>Khách hàng:</strong> <span id="res-customer"></span></p>
				<p><strong>Điện thoại:</strong> <span id="res-phone"></span></p>
				<p><strong>Email:</strong> <span id="res-email"></span></p>
				<p><strong>Ghi chú:</strong> <span id="res-note"></span></p>
				<p><strong>Trạng thái:</strong> <span id="res-status"></span></p>

				<div hidden id="res-order-section">
					<h5 class="mt-3">Món đã đặt</h5>
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>Hình</th>
								<th>Tên món</th>
								<th>Số lượng</th>
								<th>Tổng</th>
							</tr>
						</thead>
						<tbody id="res-orders"></tbody>
					</table>
				</div>
			</div>
			<div class="modal-footer">
				<button id="btnAcceptReservation" class="btn btn-success" style="display:none;">Chấp nhận</button>
				<button id="btnRejectReservation" class="btn btn-danger me-auto" style="display:none;">Từ chối</button>
				<button class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
			</div>
		</div>
	</div>
</div>

@section Styles {
	<style>
		.table th, .table td {
			vertical-align: middle;
		}

		.badge {
			font-size: 0.9rem;
			padding: 0.35em 0.65em;
		}
	</style>
}

@section Scripts {
	<script src="~/js/reservation.js"></script>
}