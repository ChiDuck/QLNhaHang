@{
    ViewData["Title"] = "Khu vực";
}

<h2 class="mb-4">Danh sách khu vực</h2>
<button class="btn btn-success mb-3" onclick="showAddForm()">
    <i class="fas fa-plus"></i> Thêm khu vực
</button>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên khu vực</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody id="areaTableBody">
        <!-- Dữ liệu render ở đây -->
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="areaModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="areaForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="areaModalTitle">Thêm khu vực</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="areaId" />
                    <div class="mb-2">
                        <label>Tên khu vực</label>
                        <input type="text" class="form-control" id="areaName" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/area.js"></script>
