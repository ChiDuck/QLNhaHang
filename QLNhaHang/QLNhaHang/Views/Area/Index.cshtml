    <div class="content-section">
        <div class="section-header">
            <h2>Danh sách khu vực</h2>
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" id="areaSearchInput" placeholder="Tìm kiếm khu vực...">
            </div>
        </div>

        <div class="areas-grid" id="areaTableBody">
            <!-- Grid items will be rendered here -->
        </div>

        <div class="empty-state" id="emptyState" style="display: none;">
            <i class="fas fa-map-marker-alt"></i>
            <h3>Chưa có khu vực nào</h3>
            <p>Thêm khu vực đầu tiên để bắt đầu</p>
            <button class="btn btn-primary" onclick="showAddForm()">
                <i class="fas fa-plus"></i>
                Thêm khu vực
            </button>
        </div>

        <div class="loading-state" id="loadingState">
            <div class="loading-spinner"></div>
            <p>Đang tải dữ liệu...</p>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="areaModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="areaForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="areaModalTitle">Thêm khu vực</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="areaId" />
                    <div class="form-group">
                        <label class="form-label">Tên khu vực</label>
                        <input type="text" class="form-control" id="areaName" required />
                        <div class="form-feedback"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Lưu
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i>
                        Hủy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/area.css">
<script src="~/js/area.js"></script>
