    ViewData["Title"] = "Khu vực";
}

<div class="area-page">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-map-marker-alt"></i>
                Quản lý khu vực
            </h1>
        </div>
        <div class="header-actions">
            <button class="btn btn-primary add-btn" onclick="showAddForm()">
                <i class="fas fa-plus"></i>
                Thêm khu vực
            </button>
        </div>
    </div>

