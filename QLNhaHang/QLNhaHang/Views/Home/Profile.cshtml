@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="list-group" id="profileMenu">
                <button class="list-group-item list-group-item-action active" onclick="showSection('info')">Thông tin cá nhân</button>
                <button class="list-group-item list-group-item-action" onclick="showSection('reservations')">Lịch sử đặt bàn</button>
                <button class="list-group-item list-group-item-action" onclick="showSection('orders')">Lịch sử đơn hàng</button>
                <button class="list-group-item list-group-item-action" onclick="showSection('changepassword')">Thay đổi mật khẩu</button>
            </div>
        </div>

        <!-- Nội dung -->
        <div class="col-md-9">
            <div id="infoSection" class="profile-section">
                <h5>Thông tin cá nhân</h5>
                <form id="profileForm" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Họ tên</label>
                        <input type="text" class="form-control" id="cusName">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Số điện thoại</label>
                        <input type="text" class="form-control" id="cusPhone">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="cusEmail">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Ngày sinh</label>
                        <input type="date" class="form-control" id="cusBirthday">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Địa chỉ</label>
                        <textarea class="form-control" id="cusAddress" rows="2"></textarea>
                    </div>
                    <div class="col-12">
                        <button type="button" class="btn btn-primary" id="saveProfileBtn" disabled>Lưu thay đổi</button>
                    </div>
                </form>
                <div id="profileMsg" class="mt-2"></div>
            </div>

            <div id="reservationsSection" class="profile-section d-none">
                <h5>Lịch sử đặt bàn</h5>
                <div id="reservationList"></div>
            </div>

            <div id="ordersSection" class="profile-section d-none">
                <h5>Lịch sử đơn hàng</h5>
                <div id="orderList"></div>
            </div>

            <div id="changepasswordSection" class="profile-section d-none">
                <div class="text-dark">
                    <strong>Đổi mật khẩu</strong>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <label for="currentPassword" class="form-label">Mật khẩu hiện tại</label>
                        <input type="password" id="currentPassword" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label for="newPassword" class="form-label">Mật khẩu mới</label>
                        <input type="password" id="newPassword" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label for="confirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input type="password" id="confirmPassword" class="form-control" />
                    </div>
                    <button class="btn btn-primary" onclick="changePassword()">Cập nhật mật khẩu</button>
                    <div id="passwordMessage" class="mt-2"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/customerprofile.js"></script>
}
