@{
	ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/admin-index.css" asp-append-version="true" />

<div class="dashboard-container">
	<!-- Stats Cards -->
	<div class="stats-grid">
		<div class="stat-card">
			<div class="stat-header">
				<div class="stat-icon-wrapper warning">
					<i class="fas fa-calendar-check"></i>
				</div>
				<div class="stat-info">
					<h3 class="stat-value" id="totalReservations">0</h3>
					<p class="stat-label">Lượt đặt bàn hôm nay</p>
				</div>
			</div>
		</div>

		<div class="stat-card">
			<div class="stat-header">
				<div class="stat-icon-wrapper info">
					<i class="fas fa-truck"></i>
				</div>
				<div class="stat-info">
					<h3 class="stat-value" id="totalOrders">0</h3>
					<p class="stat-label">Số đơn giao hàng hôm nay</p>
				</div>
			</div>
		</div>

		<div class="stat-card">
			<div class="stat-header">
				<div class="stat-icon-wrapper primary">
					<i class="fas fa-money-bill-wave"></i>
				</div>
				<div class="stat-info">
					<h3 class="stat-value" id="totalRevenue">0đ</h3>
					<p class="stat-label">Doanh thu hôm nay</p>
				</div>
			</div>
		</div>
	</div>

	<div class="row g-4">
		<div class="col-md-7">
			<div class="card p-3">
				<h5>Doanh thu tuần này</h5>
				<canvas id="revenueWeekChart"></canvas>
			</div>
		</div>
		<div class="col-md-5">
			<div class="card p-3">
				<h5>Top 5 món được đặt nhiều nhất</h5>
				<div class="mb-3">
					<select id="periodSelect" class="form-select" onchange="loadTopDishesChart()">
						<option value="day" selected>Hôm nay</option>
						<option value="week">Tuần này</option>
						<option value="month">Tháng này</option>
					</select>
				</div>
				<canvas id="topDishesChart"></canvas>
			</div>
		</div>
		<div class="col-md-12">
			<div class="card p-3">
				<h5>Doanh thu tháng này</h5>
				<canvas id="revenueMonthChart"></canvas>
			</div>
		</div>

		<div class="col-md-12">
			<div class="card p-3">
				<h5>Doanh thu năm @DateTime.Now.Year</h5>
				<canvas id="revenueYearChart"></canvas>
			</div>
		</div>
	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/admin-index.js" asp-append-version="true"></script>
