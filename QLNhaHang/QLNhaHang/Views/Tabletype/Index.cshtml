@{
    ViewData["Title"] = "Loại bàn";
}

<h1 class="mb-4">Danh sách loại bàn</h1>
<button type="button" class="btn btn-primary" onclick="showAddForm()">Thêm loại bàn</button>

<table class="table table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên loại</th>
            <th>Số ghế</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody id="tabletypeTableBody">
        <!-- Dữ liệu render qua JS -->
    </tbody>
</table>

<!-- Modal Thêm/Sửa -->
<div class="modal fade" id="tabletypeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="tabletypeForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="tabletypeModalTitle">Thêm loại bàn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="tabletypeId" />

                    <div class="mb-2">
                        <label>Tên loại</label>
                        <input type="text" class="form-control" id="tabletypeName" required />
                    </div>

                    <div class="mb-2">
                        <label>Số ghế</label>
                        <input type="number" class="form-control" id="tabletypeSeats" min="1" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/tabletype.js"></script>
}
