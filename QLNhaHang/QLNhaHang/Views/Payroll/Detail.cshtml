<h4>Chi tiết bảng lương tháng <span id="payrollMonth"></span>/<span id="payrollYear"></span></h4>
<table class="table">
    <thead>
        <tr><th>Nhân viên</th><th>Chức vụ</th><th></th></tr>
    </thead>
    <tbody id="payrollDetails"></tbody>
</table>
<!-- Modal chi tiết bảng lương -->
<div class="modal fade" id="payrollDetailModal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header bg-info text-white">
				<h5 class="modal-title">Chi tiết bảng lương: <span id="payrollModalStaffName"></span></h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				<form id="payrollDetailForm">
					<input type="hidden" id="pd_IdPayroll">
					<input type="hidden" id="pd_IdStaff">

					<div class="mb-2">
						<label class="form-label">Số ngày làm</label>
						<input type="number" class="form-control" id="pd_Days">
					</div>
					<div class="mb-2">
						<label class="form-label">Số giờ</label>
						<input type="number" step="0.1" class="form-control" id="pd_Hours">
					</div>
					<div class="mb-2">
						<label class="form-label">Số lần nghỉ</label>
						<input type="number" class="form-control" id="pd_Absencetimes">
					</div>
					<div class="mb-2">
						<label class="form-label">Số lần đi muộn</label>
						<input type="number" class="form-control" id="pd_Latetimes">
					</div>
					<div class="mb-2">
						<label class="form-label">Tiền trừ (VNĐ)</label>
						<input type="number" step="1000" class="form-control" id="pd_Subtract">
					</div>
					<div class="mb-2">
						<label class="form-label">Tiền thưởng (VNĐ)</label>
						<input type="number" step="1000" class="form-control" id="pd_Bonus">
					</div>
					<div class="mb-2">
						<label class="form-label">Tổng lương (VNĐ)</label>
						<input type="number" step="1000" class="form-control" id="pd_Totalsalary">
					</div>
					<div class="mb-2">
						<label class="form-label">Ghi chú</label>
						<textarea class="form-control" id="pd_Note"></textarea>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
				<button class="btn btn-success" onclick="savePayrollDetail()">Lưu thay đổi</button>
			</div>
		</div>
	</div>
</div>

<script src="~/js/payrolldetail.js"></script>
