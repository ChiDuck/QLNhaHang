@{
	ViewData["Title"] = "Khách hàng";
}

<div class="customer-page">
	<div class="page-header">
		<div class="header-content">
			<h1 class="page-title">
				<i class="fas fa-users"></i>
				Quản lý khách hàng
			</h1>
		</div>
	</div>

	<div class="content-section">
		<div class="section-header">
			<h2>Danh sách khách hàng</h2>
			<div class="search-controls">
				<div class="search-box">
					<i class="fas fa-search"></i>
					<input type="text" id="searchInput" placeholder="Nhập tên, email hoặc SĐT khách hàng">
				</div>
				<button class="btn btn-primary" onclick="searchCustomers()">
					<i class="fas fa-search"></i>
					Tìm kiếm
				</button>
			</div>
		</div>

		<div class="customers-grid" id="customerTableBody">
			<!-- Grid items will be rendered here -->
		</div>

		<div class="empty-state" id="emptyState" style="display: none;">
			<i class="fas fa-users"></i>
			<h3>Chưa có khách hàng nào</h3>
		</div>

		<div class="loading-state" id="loadingState">
			<div class="loading-spinner"></div>
			<p>Đang tải dữ liệu...</p>
		</div>
	</div>
</div>

<div class="modal fade" id="customerDetailModal" tabindex="-1" aria-labelledby="customerDetailModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="modalLabel">
					Chi tiết khách hàng
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
			</div>
			<div class="modal-body">
				<p><strong>Tên:</strong> <span id="customerName"></span></p>
				<p><strong>Ngày sinh:</strong> <span id="customerBirthday"></span></p>
				<p><strong>SĐT:</strong> <span id="customerPhone"></span></p>
				<p><strong>Email:</strong> <span id="customerEmail"></span></p>
				<p><strong>Địa chỉ:</strong> <span id="customerAddress"></span></p>

				<h6 class="mt-3">Lịch sử đặt bàn</h6>
				<div id="reservationList"></div>

				<h6 class="mt-3">Lịch sử giao hàng</h6>
				<div id="shiporderList"></div>
			</div>
			<div class="modal-footer">
				<button class="btn-dismiss" data-bs-dismiss="modal">Đóng</button>
				<button class="btn-delete" id="deleteBtn">
					<i class="fas fa-trash"></i>
					Xóa
				</button>
			</div>
		</div>
	</div>
</div>


<link rel="stylesheet" href="~/css/customer.css">
<script src="~/js/customer.js"></script>
