@{
	ViewData["Title"] = "Khách hàng";
}

<h2 class="mb-4">Danh sách khách hàng</h2>
<div class="input-group mb-3">
	<input type="text" id="searchInput" class="form-control" placeholder="Nhập tên, email hoặc SĐT khách hàng">
	<button class="btn btn-primary" onclick="searchCustomers()">Tìm</button>
</div>
<table class="table table-bordered table-striped">
	<thead class="table-dark">
		<tr>
			<th>ID</th>
			<th>Họ tên</th>
			<th>Điện thoại</th>
			<th>Email</th>
			<th>Ngày sinh</th>
			<th>Địa chỉ</th>
			<th>Ảnh</th>
			<th>Thao tác</th>
		</tr>
	</thead>
	<tbody id="customerTableBody">
		<!-- dữ liệu sẽ render ở đây -->
	</tbody>
</table>
<script src="~/js/customer.js"></script>