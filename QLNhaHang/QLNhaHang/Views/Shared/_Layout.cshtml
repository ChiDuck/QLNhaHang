<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - QLNhaHang</title>
	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/QLNhaHang.styles.css" asp-append-version="true" />
	@await RenderSectionAsync("Styles", required: false)
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-light border-bottom shadow-sm">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">QLNhaHang</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
						aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Home" asp-action="AdminIndex">Trang chủ</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Customer" asp-action="Index">Quản lý khách hàng</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Reservation" asp-action="Index">Quản lý đặt bàn</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Shiporder" asp-action="Index">Quản lý đơn giao hàng</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Dish" asp-action="Index">Quản lý món</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Inventoryitem" asp-action="Index">Quản lý kho</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-dark" href="#" id="dinetableDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Quản lý bàn
							</a>
							<ul class="dropdown-menu" aria-labelledby="dinetableDropdown">
								<li><a class="dropdown-item" asp-controller="Dinetable" asp-action="Index">Bàn</a></li>
								<li><a class="dropdown-item" asp-controller="Tabletype" asp-action="Index">Loại bàn</a></li>
								<li><a class="dropdown-item" asp-controller="Area" asp-action="Index">Khu vực</a></li>
							</ul>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Staff" asp-action="Index">Quản lý nhân sự</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Schedule" asp-action="Index">Quản lý thời gian biểu</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container main">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - QLNhaHang - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<div class="modal fade" id="profileModal" tabindex="-1">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header bg-primary text-white">
					<h5 class="modal-title">Thông tin cá nhân</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
				</div>
				<div class="modal-body">
					<p><strong>Họ tên:</strong> <span id="profileName"></span></p>
					<p><strong>Email:</strong> <span id="profileEmail"></span></p>
					<p><strong>SĐT:</strong> <span id="profilePhone"></span></p>
					<p><strong>Loại:</strong> <span id="profileType"></span></p>
				</div>
			</div>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
