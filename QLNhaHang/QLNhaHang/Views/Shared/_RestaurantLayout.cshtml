	<!-- Modern Login Modal -->
	<div class="modal fade modern-modal" id="loginModal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content modern-modal-content">
				<div class="modal-header modern-modal-header">
					<h5 class="modal-title">
						<i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
					</h5>
					<button class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body modern-modal-body">
					<form class="modern-form">
						<div class="form-floating mb-3">
							<input type="text" class="form-control modern-input" id="loginIdentity" placeholder="Email hoặc SĐT">
							<label for="loginIdentity">Email hoặc Số điện thoại</label>
						</div>
						<div class="form-floating mb-3">
							<input type="password" class="form-control modern-input" id="loginPassword" placeholder="Mật khẩu">
							<label for="loginPassword">Mật khẩu</label>
						</div>
						<button type="button" class="btn modern-btn-primary w-100 mb-3" onclick="loginCustomer()">
							<i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
						</button>
					</form>
					<div class="text-center">
						<p class="mb-0">
							Chưa có tài khoản?
							<a href="#" class="modern-link" onclick="switchToRegister()">Đăng ký ngay</a>
						</p>
					</div>
					<div id="authMessage" class="modern-alert mt-3" style="display: none;"></div>
				</div>
			</div>
		</div>
	</div>

	<!-- Modern Register Modal -->
	<div class="modal fade modern-modal" id="registerModal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content modern-modal-content">
				<div class="modal-header modern-modal-header">
					<h5 class="modal-title">
						<i class="fas fa-user-plus me-2"></i>Đăng ký
					</h5>
					<button class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body modern-modal-body">
					<form id="registerForm" class="modern-form" onsubmit="event.preventDefault(); registerCustomer()">
						<div class="form-floating mb-3">
							<input type="text" class="form-control modern-input" id="regName" placeholder="Họ tên" required>
							<label for="regName">Họ và tên</label>
						</div>
						<div class="form-floating mb-3">
							<input type="email" class="form-control modern-input" id="regEmail" placeholder="Email">
							<label for="regEmail">Email</label>
						</div>
						<div class="form-floating mb-3">
							<input type="text" class="form-control modern-input" id="regPhone" placeholder="Số điện thoại">
							<label for="regPhone">Số điện thoại</label>
						</div>
						<div class="form-floating mb-3">
							<input type="password" class="form-control modern-input" id="regPassword" placeholder="Mật khẩu" required>
							<label for="regPassword">Mật khẩu</label>
						</div>
						<button class="btn modern-btn-success w-100 mb-3" type="submit">
							<i class="fas fa-user-plus me-2"></i>Đăng ký
						</button>
					</form>
					<div class="text-center">
						<p class="mb-0">
							Đã có tài khoản?
							<a href="#" class="modern-link" onclick="switchToLogin()">Đăng nhập</a>
						</p>
					</div>
					<div id="authMessage" class="modern-alert mt-3" style="display: none;"></div>
				</div>
			</div>
		</div>
	</div>

	<!-- Modern Cart Modal -->
	<div class="modal fade modern-modal" id="cartModal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-lg modal-dialog-centered">
			<div class="modal-content modern-modal-content">
				<div class="modal-header modern-modal-header">
					<h5 class="modal-title">
						<i class="fas fa-shopping-cart me-2"></i>Giỏ Hàng Của Bạn
					</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body modern-modal-body">
					<div id="emptyCartMessage" class="empty-state">
						<div class="empty-icon">
							<i class="fas fa-shopping-cart"></i>
						</div>
						<h6>Giỏ hàng trống</h6>
						<p>Hãy thêm một số món ăn vào giỏ hàng của bạn</p>
					</div>
					<div id="cartItemsContainer" class="cart-items-container" style="display: none;">
						<div class="cart-items-list" id="cartItems">
							<!-- Cart items will be loaded here -->
						</div>
						<div class="cart-summary">
							<div class="summary-row">
								<span class="summary-label">Tổng cộng:</span>
								<span id="cartTotal" class="summary-value">0 ₫</span>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer modern-modal-footer">
					<a class="btn modern-btn-outline" asp-area="" asp-controller="Home" asp-action="Menu">
						<i class="fas fa-arrow-left me-2"></i>Tiếp tục chọn món
					</a>
					<button id="checkoutButton" type="button" class="btn modern-btn-primary">
						<i class="fas fa-credit-card me-2"></i>Tạo đơn
					</button>
				</div>
			</div>
		</div>
	</div>

	<!-- Modern Checkout Modal -->
	<div class="modal fade modern-modal" id="checkoutModal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-xl modal-dialog-centered">
			<div class="modal-content modern-modal-content">
				<div class="modal-header modern-modal-header">
					<h5 class="modal-title">
						<i class="fas fa-credit-card me-2"></i>Thông Tin Thanh Toán
					</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body modern-modal-body">
					<form id="checkoutForm" class="modern-form">
						<div class="row">
							<!-- Customer Information -->
							<div class="col-lg-7">
								<div class="checkout-section">
									<h6 class="section-title">
										<i class="fas fa-user me-2"></i>Thông tin khách hàng
									</h6>

									<div class="form-floating mb-3">
										<input type="text" class="form-control modern-input" id="customerName" placeholder="Họ và tên" required>
										<label for="customerName">Họ và tên *</label>
									</div>

									<div class="row">
										<div class="col-md-6">
											<div class="form-floating mb-3">
												<input type="tel" class="form-control modern-input" id="phone" placeholder="Số điện thoại">
												<label for="phone">Số điện thoại</label>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-floating mb-3">
												<input type="email" class="form-control modern-input" id="email" placeholder="Email">
												<label for="email">Email</label>
											</div>
										</div>
									</div>

									<div class="form-check modern-checkbox mb-3">
										<input type="checkbox" class="form-check-input" id="isShipping">
										<label class="form-check-label" for="isShipping">
											<i class="fas fa-truck me-2"></i>Giao hàng tận nơi
										</label>
									</div>

									<div id="shippingAddressGroup" class="mb-3" style="display: none;">
										<div class="form-floating">
											<input type="text" class="form-control modern-input" id="shipAddress" placeholder="Địa chỉ giao hàng">
											<label for="shipAddress">Địa chỉ giao hàng *</label>
										</div>
									</div>

									<div class="form-floating mb-3">
										<textarea class="form-control modern-input" id="note" placeholder="Ghi chú" style="height: 80px;"></textarea>
										<label for="note">Ghi chú đặc biệt</label>
									</div>
								</div>

								<div class="checkout-section">
									<h6 class="section-title">
										<i class="fas fa-credit-card me-2"></i>Phương thức thanh toán
									</h6>

									<div class="payment-methods">
										<div class="payment-option">
											<input class="form-check-input" type="radio" name="paymentMethod" id="cashPayment" value="cash" checked>
											<label class="payment-label" for="cashPayment">
												<div class="payment-icon">
													<i class="fas fa-money-bill-wave"></i>
												</div>
												<div class="payment-info">
													<span class="payment-name">Tiền mặt</span>
													<small class="payment-desc">Thanh toán khi nhận hàng</small>
												</div>
											</label>
										</div>
										<div class="payment-option">
											<input class="form-check-input" type="radio" name="paymentMethod" id="vnpayPayment" value="vnpay">
											<label class="payment-label" for="vnpayPayment">
												<div class="payment-icon">
													<img src="~/images/Icon-VNPAY-QR.webp" alt="VNPay" style="height: 24px;">
												</div>
												<div class="payment-info">
													<span class="payment-name">Cổng thanh toán VNPay</span>
													<small class="payment-desc">Thanh toán online</small>
												</div>
											</label>
										</div>
									</div>
								</div>
							</div>

							<!-- Order Summary -->
							<div class="col-lg-5">
								<div class="order-summary">
									<h6 class="section-title">
										<i class="fas fa-receipt me-2"></i>Chi tiết đơn hàng
									</h6>

									<div id="orderSummary" class="order-items">
										<!-- Order items will be loaded here -->
									</div>

									<div class="order-totals">
										<div class="total-row">
											<span>Tạm tính:</span>
											<span id="subtotal">0 ₫</span>
										</div>
										<div class="total-row">
											<span>Phí vận chuyển:</span>
											<span id="shippingFee">15,000 ₫</span>
										</div>
										<div class="total-row final-total">
											<span>Tổng cộng:</span>
											<span id="totalPrice">0 ₫</span>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
				<div class="modal-footer modern-modal-footer">
					<button type="button" id="backToCartBtn" class="btn modern-btn-outline" data-bs-toggle="modal" data-bs-target="#cartModal">
						<i class="fas fa-arrow-left me-2"></i>Quay lại giỏ hàng
					</button>
					<button type="button" id="submitOrderBtn" class="btn modern-btn-primary">
						<i class="fas fa-check me-2"></i>Đặt hàng
					</button>
				</div>
			</div>
		</div>
	</div>

	<!-- Modern Booking Modal -->
	<div class="modal fade booking-modal" id="bookingModal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-xl modal-dialog-centered">
			<div class="modal-content booking-modal-content">
				<div class="modal-header booking-modal-header">
					<div class="booking-header-content">
						<div class="booking-icon">
							<i class="fas fa-calendar-check"></i>
						</div>
						<div class="booking-title-section">
							<h4 class="booking-title">Đặt bàn nhà hàng</h4>
							<p class="booking-subtitle">Đặt bàn dễ dàng chỉ trong vài bước</p>
						</div>
					</div>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>

				<div class="modal-body booking-modal-body">
					<!-- Progress Steps -->
					<div class="booking-progress">
						<div class="progress-step active" data-step="1">
							<div class="step-circle">
								<i class="fas fa-calendar-alt"></i>
							</div>
							<span class="step-label">Chọn thời gian</span>
						</div>
						<div class="progress-line"></div>
						<div class="progress-step" data-step="2">
							<div class="step-circle">
								<i class="fas fa-utensils"></i>
							</div>
							<span class="step-label">Chọn món ăn</span>
						</div>
						<div class="progress-line"></div>
						<div class="progress-step" data-step="3">
							<div class="step-circle">
								<i class="fas fa-table"></i>
							</div>
							<span class="step-label">Chọn bàn</span>
						</div>
						<div class="progress-line"></div>
						<div class="progress-step" data-step="4">
							<div class="step-circle">
								<i class="fas fa-user"></i>
							</div>
							<span class="step-label">Thông tin</span>
						</div>
					</div>

					<!-- Step 1: Date & Time Selection -->
					<div class="booking-step" id="bookingStep1">
						<div class="step-content">
							<div class="step-header">
								<h5 class="step-title">
									<i class="fas fa-calendar-alt me-2"></i>
									Chọn ngày và giờ đặt bàn
								</h5>
								@* 								<p class="step-description">Vui lòng chọn thời gian phù hợp cho bữa ăn của bạn</p>
 *@							</div>

							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<label class="form-label">
											<i class="fas fa-calendar me-2"></i>Ngày đặt bàn
										</label>
										<input type="date" class="form-control booking-input" id="bookingDate" required>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label class="form-label">
											<i class="fas fa-clock me-2"></i>Giờ đặt bàn
										</label>
										<select class="form-control booking-input" id="bookingTime" required>
											<!-- Time options will be populated by JS -->
										</select>
									</div>
								</div>
							</div>

							<div class="row mt-3">
								<div class="col-md-6">
									<div class="form-group">
										<label class="form-label">
											<i class="fas fa-users me-2"></i>Số lượng khách
										</label>
										<select class="form-control booking-input" id="partySize" required>
											<option value="1">1 người</option>
											<option value="2" selected>2 người</option>
											<option value="3">3 người</option>
											<option value="4">4 người</option>
											<option value="5">5 người</option>
											<option value="6">6 người</option>
											<option value="7">7 người</option>
											<option value="8">8 người</option>
											<option value="9">9 người</option>
											<option value="10">10 người</option>
											<option value="11">11 người</option>
											<option value="12">12 người</option>
											<option value="13">13 người</option>
											<option value="14">14 người</option>
											<option value="15">15 người</option>
										</select>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- Step 2: Dish Selection -->
					<div class="booking-step" id="bookingStep2" style="display: none;">
						<div class="step-content">
							<div class="step-header">
								<h5 class="step-title">
									<i class="fas fa-utensils me-2"></i>
									Chọn món ăn (Tùy chọn)
								</h5>
								<p class="step-description">Bạn có thể đặt trước một số món ăn hoặc bỏ qua bước này</p>
							</div>

							<div class="dish-search-bar">
								<div class="search-input-group">
									<i class="fas fa-search"></i>
									<input type="text" class="form-control" id="dishSearchInput" placeholder="Tìm kiếm món ăn...">
								</div>
							</div>

							<div class="dish-categories">
								<button class="category-btn active" data-category="0">Tất cả</button>
								<button class="category-btn" data-category="1">Khai vị</button>
								<button class="category-btn" data-category="2">Món chính</button>
								<button class="category-btn" data-category="3">Món phụ</button>
								<button class="category-btn" data-category="4">Tráng miệng</button>
								<button class="category-btn" data-category="5">Đồ uống</button>
							</div>
							<div class="dish-selection-container">

								<div class="dishes-grid" id="dishesGrid">
									<!-- Dishes will be populated by JS -->
								</div>
							</div>
							<div class="selected-dishes-summary" id="selectedDishesSummary" style="display: none;">
								<h6 class="summary-title">
									<i class="fas fa-check-circle me-2"></i>
									Món ăn đã chọn
								</h6>
								<div class="selected-dishes-list" id="selectedDishesList">
									<!-- Selected dishes will be shown here -->
								</div>
								<div class="summary-total">
									<span class="total-label">Tổng cộng:</span>
									<span class="total-amount" id="dishesTotal">0 ₫</span>
								</div>
							</div>
						</div>
					</div>

					<!-- Step 3: Table Selection -->
					<div class="booking-step" id="bookingStep3" style="display: none;">
						<div class="step-content">
							<div class="step-header">
								<h5 class="step-title">
									<i class="fas fa-table me-2"></i>
									Chọn loại bàn
								</h5>
							</div>

							<div class="booking-summary-info">
								<div class="summary-item">
									<i class="fas fa-calendar-alt"></i>
									<span id="summaryDateTime">--</span>
								</div>
								<div class="summary-item">
									<i class="fas fa-users"></i>
									<span id="summaryPartySize">-- người</span>
								</div>
								<div class="summary-item">
									<i class="fas fa-utensils"></i>
									<span id="summaryDishCount">-- món ăn</span>
								</div>
							</div>

							<div class="table-types-container" id="tableTypesContainer">
								<!-- Available table types will be populated by JS -->
							</div>
						</div>
					</div>

					<!-- Step 4: Customer Information -->
					<div class="booking-step" id="bookingStep4" style="display: none;">
						<div class="step-content">
							<div class="step-header">
								<h5 class="step-title">
									<i class="fas fa-user me-2"></i>
									Thông tin khách hàng
								</h5>
								<p class="step-description">Vui lòng điền thông tin để hoàn tất đặt bàn</p>
							</div>

							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<label class="form-label">
											<i class="fas fa-user me-2"></i>Họ và tên *
										</label>
										<input type="text" class="form-control booking-input" id="customerBookName" required>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label class="form-label">
											<i class="fas fa-phone me-2"></i>Số điện thoại *
										</label>
										<input type="tel" class="form-control booking-input" id="customerPhone" required>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<label class="form-label">
											<i class="fas fa-envelope me-2"></i>Email
										</label>
										<input type="email" class="form-control booking-input" id="customerEmail">
									</div>
								</div>
							</div>

							<div class="form-group">
								<label class="form-label">
									<i class="fas fa-sticky-note me-2"></i>Ghi chú đặc biệt
								</label>
								<textarea class="form-control booking-input" id="bookingNote" rows="3" placeholder="Yêu cầu đặc biệt, dị ứng thực phẩm, v.v..."></textarea>
							</div>

							<!-- Final Summary -->
							<div class="final-booking-summary">
								<h6 class="summary-title">
									<i class="fas fa-receipt me-2"></i>
									Tóm tắt đặt bàn
								</h6>
								<div class="summary-details">
									<div class="summary-row">
										<span class="label">Thời gian:</span>
										<span class="value" id="finalDateTime">--</span>
									</div>
									<div class="summary-row">
										<span class="label">Số khách:</span>
										<span class="value" id="finalPartySize">--</span>
									</div>
									<div class="summary-row">
										<span class="label">Loại bàn:</span>
										<span class="value" id="finalTableType">--</span>
									</div>
									<div class="summary-row">
										<span class="label">Món ăn:</span>
										<span class="value" id="finalDishCount">--</span>
									</div>
									<div class="summary-row total-row">
										<span class="label">Tổng tiền:</span>
										<span class="value" id="finalTotalAmount">0 ₫</span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="modal-footer booking-modal-footer">
					<div class="footer-actions">
						<button type="button" class="btn booking-btn-secondary" id="bookingPrevBtn" style="display: none;">
							<i class="fas fa-arrow-left me-2"></i>Quay lại
						</button>
						<button type="button" class="btn booking-btn-primary" id="bookingNextBtn">
							Tiếp tục
							<i class="fas fa-arrow-right ms-2"></i>
						</button>
						<button type="button" class="btn booking-btn-success" id="bookingConfirmBtn" style="display: none;">
							<i class="fas fa-check me-2"></i>Xác nhận đặt bàn
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Booking Success Modal -->
	<div class="modal fade" id="bookingSuccessModal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content success-modal-content">
				<div class="modal-body text-center p-5">
					<div class="success-icon">
						<i class="fas fa-check-circle"></i>
					</div>
					<h4 class="success-title">Đặt bàn thành công!</h4>
					<p class="success-message">Cảm ơn quý khách đã đặt bàn tại nhà hàng của chúng tôi.</p>
					<div class="booking-code">
						<span class="code-label">Mã đặt bàn:</span>
						<span class="code-value" id="bookingCode">#000000</span>
					</div>
					<p class="success-note">Thông tin đặt bàn đã được gửi qua email của quý khách. Vui lòng theo dõi để biết thêm thông tin.</p>
					<button type="button" class="btn booking-btn-primary" data-bs-dismiss="modal">
						<i class="fas fa-home me-2"></i>Về trang chủ
					</button>
				</div>
			</div>
		</div>
	</div>

	<!-- Scripts -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/clientsite.js" asp-append-version="true"></script>
	<script src="~/js/menu.js" asp-append-version="true"></script>
	<script src="~/js/booking-enhanced.js" asp-append-version="true"></script>
	<script src="~/js/restaurant-layout.js" asp-append-version="true"></script>
	<script src="~/js/ordering.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
